//linked list note:
//define linked list node 
// 单链表
struct ListNode {
    int val;  // 节点上存储的元素
    ListNode *next;  // 指向下一个节点的指针
    ListNode(int x) : val(x), next(NULL) {}  // 节点的构造函数
};

//C++默认生成一个构造函数。但是这个构造函数不会初始化任何成员变量，下面我来举两个例子：

//通过自己定义构造函数初始化节点：
//ListNode* head = new ListNode(5);

//使用默认构造函数初始化节点：
//ListNode* head = new ListNode();
//head->val = 5;

//所以如果不定义构造函数使用默认构造函数的话，在初始化的时候就不能直接给变量赋值！

//in c++ afterdeleting a node, gotta manually release the memory


//use it's own linked list: gotta deal with head node and other nodes separately
/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) { 
        while(head != NULL && head -> val == val) {
            ListNode* tmp = head;
            head = head -> next;
            delete tmp;
        }
        ListNode* cur = head;
        while(cur != NULL && cur -> next != NULL) {
            if(cur -> next -> val == val) {
                ListNode* tmp = cur -> next;
                cur -> next = cur -> next -> next;
                delete tmp;
            }
            else {
                cur = cur -> next;
            }
        }
        return head;
    }
};


//set a dummy head node: so dont need to deal with head node and other nodes separately
/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) { 
        ListNode* dummyHead = new ListNode(0);
        dummyHead -> next = head;
        //go through the list with cur, and keep the position of dummyHead, so at the end can return dummyHead
        //the reason assign dummyHead to cur rather than assign dummyHead -> next to cur, is because we will delete cur -> next, we dont delete dummyHead
        //in while loop, so if we will cur -> next, we must know the previous of node of cur -> next which is cur, so that cur can point to cur -> next -> next directly.
        ListNode* cur = dummyHead;    
        while(cur -> next != NULL) {                //cur -> next is to be deleted, that's why we need to check wnether it's NULL or not
            if(cur -> next -> val == val) {
                ListNode* tmp = cur -> next;
                cur -> next = cur -> next -> next;
                delete tmp;
            }
            else {
                cur = cur -> next;
            }
        }
        head = dummyHead -> next;
        delete dummyHead;
        return head;
    }
};
