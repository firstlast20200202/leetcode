class Solution {
public:
    int longestValidParentheses(string s) {
        int res = 0;
        int l = 0;
        int r = 0;
        for(int i = 0; i < s.size(); i++) {
            if(s[i] == '(') l++;
            if(s[i] == ')') r++;
            if(l == r) res = max(res, l*2);
            if(r > l) {l = 0; r = 0;}
        }
        l = 0; r = 0;
        for(int i = s.size() - 1; i >= 0 ; i--) {
            if(s[i] == '(') l++;
            if(s[i] == ')') r++;
            if(l == r) res = max(res, l*2);
            if(l > r) {l = 0; r = 0;}
        }
        return res;
    }
};

