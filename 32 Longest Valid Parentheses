class Solution {
public:
    int longestValidParentheses(string s) {
        int res = 0;
        int l = 0;
        int r = 0;
        for(int i = 0; i < s.size(); i++) {
            if(s[i] == '(') l++;
            if(s[i] == ')') r++;
            if(l == r) res = max(res, l*2);
            if(r > l) {l = 0; r = 0;}
        }
        l = 0; r = 0;
        for(int i = s.size() - 1; i >= 0 ; i--) {
            if(s[i] == '(') l++;
            if(s[i] == ')') r++;
            if(l == r) res = max(res, l*2);
            if(l > r) {l = 0; r = 0;}
        }
        return res;
    }
};


//method 2
class Solution {
public:
    int longestValidParentheses(string s) {
        int res = 0;
        stack<char> st;
        for(int i = 0; i < s.size(); i++) {
            if(s[i] == '(') st.push(s[i]);
            if(s[i] == ')') {
                if(st.empty() || st.top() == ')') st.push(s[i]);
                if(st.top() == '(') {
                    st.pop();
                    res += 2;
                }
            }
        }
        return res;
    }
};
