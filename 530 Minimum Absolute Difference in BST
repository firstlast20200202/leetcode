/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
private:
    int res = INT_MAX;  //because it's calculating the minimum value, so define it to max value first
    TreeNode* pre = NULL;
    void traversal(TreeNode* cur) {    // because it's traversal the whole tree, so no return value
        if(cur == NULL) return;
        traversal(cur -> left);     //traversal left
        if(pre != NULL) res = min(res, cur -> val - pre -> val);    //middle
        pre = cur;
        traversal(cur -> right);
    }
public:
    int getMinimumDifference(TreeNode* root) {
        traversal(root);
        return res;
    }
};
