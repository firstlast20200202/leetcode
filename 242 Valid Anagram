//hash is used to quickly find out whether an element is in an array or not, but it sacrifices the memory to optimise time

class Solution {
public:
    bool isAnagram(string s, string t) {
        int record[26] = {0};
        for(int i = 0; i < s.size(); i++) {
            record[s[i]-'a']++;
        }
        for(int j = 0; j < t.size(); j++) {
            record[t[j]-'a']--;
        }
        for(int k = 0; k < 26; k++) {        //length of an array: sizeof(record)/sizeof(record[0])
            if(record[k] != 0) return false;
        }
        return true;
    }
};
