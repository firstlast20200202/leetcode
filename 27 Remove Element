//two pointers: fast pointer is to obtain the elements in the new array (!= val), after finding the elements, update the new indexes for slow pointer, 
//so slow pointer is to obtain the indexes in the new array.
class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        int slow = 0;
        for(int fast = 0; fast < nums.size(); fast++) {
            if(val != nums[fast]) {
                nums[slow++] = nums[fast];
            }
        }
        return slow;
    }
};


//brutal force
class Solution {
public:
    int removeElement(vector<int>& nums, int val) {
        int s = nums.size();
        for(int i = 0; i < s; i++) {
            if(nums[i] == val) {
                for(int j = i+1; j < nums.size(); j++) {
                    nums[j-1] = nums[j];
                }
                i--;    //because in next outer 'for' loop i gotta increase 1, this is to locate to the element which hasnt been compared to val
                s--;
            }
        }
        return s;
    }
};

//for loop works in this way:
//initialise the value -> compare the condition -> execute statements
//increase 1 -> compare the condition -> execute statements
//increase 1 -> compare the condition -> execute statements
//increase 1 -> compare the condition -> fnish the loop

