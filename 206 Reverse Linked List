/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        ListNode* cur = head;
        ListNode* pre = NULL;
        ListNode* tmp;
        while(cur) {
            tmp = cur -> next;    //because cur will point to pre which would lose the link to the next node of cur, that's why we need to save the next node of cur first
            cur -> next = pre;
            pre = cur;
            cur = tmp;
        }
        return pre;
    }
};
