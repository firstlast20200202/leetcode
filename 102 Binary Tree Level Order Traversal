/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    vector<vector<int>> levelOrder(TreeNode* root) {
        queue<TreeNode*> que;
        if(root != NULL) que.push(root);
        vector<vector<int>> res;
        while(!que.empty()) {    //ending condition of while loop is that the queue is empty, that's why we need to push the root node into the queue first
            int size = que.size();    //get the size of every depth of the tree
            vector<int> vec;    //vector is used to stock elements of every depth
            for(int i = 0; i < size; i++) {    //browse elements of every layer based on the size, for each node: add into the vector, pop, and add child nodes into the queue; i here is just a counter, counting how many nodes to be dealt with in the queue
                TreeNode* node = que.front();
                que.pop();
                vec.push_back(node -> val);
                if(node -> left) que.push(node -> left);
                if(node -> right) que.push(node -> right);
            }
            res.push_back(vec);
        }
        return res;
    }
};
