class Solution {
public:
    int jump(vector<int>& nums) {
        if(nums.size() == 1) return 0;  //for test case [1], it should return 0 instead of 1
        int res = 0;
        int curCover = 0;   //当前覆盖最远距离下标
        int nextCover = 0;  //下一步覆盖最远距离下标
        for(int i = 0; i < nums.size(); i++) {
            nextCover = max(nextCover, i + nums[i]);
            if(i == curCover) {     //遇到当前覆盖最远距离下标
                res++;
                curCover = nextCover;   //更新当前覆盖最远距离下标
                if(curCover >= nums.size() - 1) break;
            }
        }
        return res;
    }
};
