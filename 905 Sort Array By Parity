class Solution {
public:
    vector<int> sortArrayByParity(vector<int>& nums) {
        int i = 0, j = nums.size()-1;
        vector<int> res(j+1);
        int k = 0;
        while(i <= j) {
            if(nums[k] % 2 == 0) {
                res[i] = nums[k];
                i++;
            }
            else {
                res[j] = nums[k];
                j--;
            }
            k++;
        }
        return res;
    }
};
