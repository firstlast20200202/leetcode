//this method is based on mid is in [l, r], the condition of while loops has to be l<=r rather than l<r, say, nums = [1,2,3,4,5], target = 2, if l<r, after two loops, l == 1, r == 1...
//can't get in the third loop, which is when nums[mid] == 1 and mid will be returned. 
//so if it doesnt consider the scenario of l == r, it would miss the scenario when l == r == mid (which will be returned).
//gotta assign mid-1 to r in the next loop, since the value of r has been considered in each loop already.
//in summary, in this method [l, r], r = nums.size()-1, l<=r, r = mid-1.


class Solution {
public:
    int search(vector<int>& nums, int target) {
        int l = 0;
        int r = nums.size()-1;
        while(l<=r) {    //when l == r, [l, r] is still valid
            int mid = (l+r)/2;
            if(nums[mid] > target) r = mid-1;
            else if(nums[mid] < target) l = mid+1;
            else return mid;
        }
        return -1;
    }
};




//this method is based on that mid is [l, r), in this method gotta assign mid to r, since the value of mid was not considered in the previous loop.
//in summary, in this method [l, r), r = nums.size(), l<r, r = mid.

class Solution {
public:
    int search(vector<int>& nums, int target) {
        int l = 0, r = nums.size();             
        while(l < r) {                                  //it's impossible that l == r
            int mid = (l + r) / 2; 
            if(nums[mid] > target) r = mid;
            else if(nums[mid] < target) l = mid + 1;
            else return mid;
        }
        return -1;
    }
};




//round 2

class Solution {
public:
    int search(vector<int>& nums, int target) {
        int l = 0;
        int r = nums.size()-1;
        while(l<=r) {
            int m = l + (r-l)/2;
            if(nums[m] > target) r = m-1;
            else if(nums[m] < target) l = m+1;
            else return m;
        }
        return -1;
    }
};



//written by myself on 17th Dec 2025
class Solution {
public:
    int search(vector<int>& nums, int target) {
        int l = 0, r = nums.size()-1;
        while(l<=r) {
            int mid = (l+r)/2;
            if(nums[mid] == target) return mid;
            else if(nums[mid] < target) l = mid+1;
            else r = mid-1;
        }
        return -1;
    }
};
