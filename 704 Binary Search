//this method is based on mid is in [l, r]
class Solution {
public:
    int search(vector<int>& nums, int target) {
        int res = 0;
        int l = 0;
        int r = nums.size()-1;
        //in the answer the condition is l<=r, since when l==r [l, r] is till valid
        while(l<r) {    
            int mid = (l+r)/2;
            if(nums[mid] > target) r = mid-1;
            else if(nums[mid] < target) l = mid+1;
            else return mid;
        }
        return -1;
    }
};
