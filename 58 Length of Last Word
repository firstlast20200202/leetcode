class Solution {
public:
    int lengthOfLastWord(string s) {
        int res = 0;
        bool lastIsSpace = false;
        for(int i = 0; i < s.size(); i++) {
            if(s[i] == ' ') {
                lastIsSpace = true;
            }    
            else if(lastIsSpace) {
                res = 1;
                lastIsSpace = false;
            }
            else {
                res++;
            }
        }
        return res;
    }
};
