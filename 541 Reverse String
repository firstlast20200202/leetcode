class Solution {
public:
    string reverseStr(string s, int k) {
        for (int i = 0; i < s.size(); i += (2 * k)) {
            // 1. 每隔 2k 个字符的前 k 个字符进行反转
            // 2. 剩余字符小于 2k 但大于或等于 k 个，则反转前 k 个字符
            if (i + k <= s.size()) {
                reverse(s.begin() + i, s.begin() + i + k);    //s.begin() is an iterator which is a pointer which value is a memory address, adding numbers is changing the index
            } else {
                // 3. 剩余字符少于 k 个，则将剩余字符全部反转。
                reverse(s.begin() + i, s.end());
            }
        }
        return s;
    }
};


//reverse(s.begin(), s.end()) is a valid use of the std::reverse() function in C++, which is part of the <algorithm> header. 
//std::reverse() is a built-in function in the C++ Standard Template Library (STL) used to reverse the order of elements within a specified range.
//Parameters: It takes two iterators as arguments:
//s.begin(): An iterator pointing to the first element of the container (e.g., a string, vector, or array).
//s.end(): An iterator pointing to one past the last element of the container.
