    bool judgeCircle(string moves) {
        int left, right, up, down = 0;
        for(int i = 0; i < moves.size(); i++) {
            if(moves[i] == 'L') left++;
            if(moves[i] == 'R') right++;
            if(moves[i] == 'U') up++;
            if(moves[i] == 'D') down++;
        }
        //cout << left;
        return (left == right) && (up == down);
    }
};
