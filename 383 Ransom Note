class Solution {
public:
    bool canConstruct(string ransomNote, string magazine) {
        int tmp[26] = {0};
        for(int i = 0; i < magazine.size(); i++) {
            tmp[magazine[i]-'a']++;
        }
        for(int j = 0; j < ransomNote.size(); j++) {
            tmp[ransomNote[j]-'a']--;
            if(tmp[ransomNote[j]-'a'] < 0) return false;
        }
        return true;
    }
};


//written by myself: store letters of magazine in a map and record the number of each letter, then find the letters of ransomNote in the map as well as decrease the numbers,
//then go through the map, if any number is smaller than 0, return false
class Solution {
public:
    bool canConstruct(string ransomNote, string magazine) {
        unordered_map<char, int> map;
        for(int i = 0; i < magazine.size(); i++) {
            if(map.find(magazine[i]) != map.end()) {
                map[magazine[i]]++;
            }
            else {
                map.insert({magazine[i], 1});
            }
        }
        for(int j = 0; j < ransomNote.size(); j++) {
            if(map.find(ransomNote[j]) != map.end()) {
                map[ransomNote[j]]--;
            }
            else return false;
        }
        for(int k = 0; k < map.size(); k++) {
            if(map[k] < 0) return false;
        }
        return true;
    }
};
