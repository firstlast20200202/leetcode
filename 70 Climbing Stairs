class Solution {
public:
    int climbStairs(int n) {
        if(n <= 1) return n;
        vector<int> dp(3);
        //dont need to initialise dp[0] since 1 <= n <= 45
        dp[1] = 1;
        dp[2] = 1;
        //i is counting the times of the loop
        for(int i = 2; i <= n; i++) {
            int sum = dp[1] + dp[2];
            dp[1] = dp[2];
            dp[2] = sum;
        }
        return dp[2];
    }
};
